!hide top banner ads
linkedin.com##*[class*=ad-banner-container]

!hide premium blocks
linkedin.com##*[class*=premium]

!hide Promoted posts
linkedin.com##div.relative.ember-view > div:-abp-has(span:-abp-contains(Promoted))

!hide "improve your * skills posts
linkedin.com##div.relative.ember-view > div:-abp-has(div:-abp-contains(/Improve your/i))

!hide any button having "Try Premium" in the notification
linkedin.com##button:-abp-contains(/Try Premium/i)
